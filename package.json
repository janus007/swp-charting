{
  "name": "@sevenweirdpeople/swp-charting",
  "version": "0.2.2",
  "description": "Lightweight, zero-dependency SVG charting library",
  "author": "SWP",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/swp-charting"
  },
  "homepage": "https://github.com/user/swp-charting#readme",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild src/index.ts --bundle --format=esm --minify --sourcemap --outfile=dist/swp-charting.js",
    "test": "vitest",
    "test:run": "vitest run",
    "prepublishOnly": "npm run test:run && npm run build"
  },
  "devDependencies": {
    "@rollup/rollup-win32-x64-msvc": "^4.53.3",
    "esbuild": "^0.24.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.0",
    "@vitest/browser": "^2.1.0",
    "jsdom": "^25.0.0"
  },
  "keywords": [
    "chart",
    "svg",
    "typescript",
    "line-chart"
  ],
  "license": "MIT"
}
